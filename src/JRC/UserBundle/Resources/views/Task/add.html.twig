{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6">
				<div class="page-header">
					<h2>Nueva tarea</h2>
				</div>
				{{ form_start(form, {'attr': {'role' : 'form'}}) }}
					<fieldset>
					    <div class="form-group">
					        {{ form_label(form.title, 'Titulo') }}
					        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder' : 'Titulo de la tarea'}}) }}
					    </div>

					    <div class="form-group">
					        {{ form_label(form.user, 'Usuario') }}
					        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
					    </div>

					    <div class="form-group">
					        {{ form_label(form.description, 'Descripción') }}
					        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : 'Descripción de la tarea'}}) }}
					    </div>
					</fieldset>

				    <p>
				        {{ form_widget(form.save, {'label' : 'Crear tarea', 'attr': {'class': 'btn btn-success'}}) }}
				    </p>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}